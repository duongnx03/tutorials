    <style>
        body {
            animation-name: bg;
            animation-duration: 10s;
            animation-iteration-count: infinite;
        }

        h1 {
            font-size: 30px;
            font-weight: bold;
            text-align: center;
        }

        #messageArea,
        form {
            width: 600px;
            border: 2px solid #e3e3e3;
            padding: 20px 20px;
            margin: 10px auto;
        }

        #form {
            text-align: center;
        }

        button {
            border-radius: 20px;
            border: none;
            color: white;
            font-size: 15px;
            font-weight: bold;
            padding: 10px 40px;
            background-color: cornflowerblue;
        }

        #myname {
            width: 530px;
            border: 2px solid #e3e3e3;
            border-radius: 10px;
            line-height: 30px;
            margin-bottom: 20px;
        }

        #message {
            width: 530px;
            border: 2px solid #e3e3e3;
            border-radius: 10px;
            line-height: 30px;
            margin-bottom: 20px;
        }

        #messageArea {
            display: grid;
            grid-template-columns: 30% 70%;
        }

        #messageArea span {
            font-weight: bold;
            font-size: 13px;
            border: 2px solid #e3e3e3;
            background-color: white;
            padding: 10px;
            border-radius: 10px;
            margin-right: 5px;
        }

        @keyframes bg {
            0% {
                background-image: url("/z4798211228381_9c224fcfa2d005eb80c400d434bf261e.jpg");
            }

            25% {
                background-image: url("/z4798211234397_5f6e80a177c12576fca920e6f52b0264.jpg");
            }

            50% {
                background-image: url("/z4798211238979_67eafba414bc8e06e02335692987c52a.jpg");
            }

            75% {
                background-image: url("/z4798211245163_79a1da0bf25d596864d334f840881f80.jpg");
            }

            100% {
                background-image: url("/z4798211245202_ad9676a119f78935a88c1165658807f1.jpg");
            }
        }
    </style>
</head>

