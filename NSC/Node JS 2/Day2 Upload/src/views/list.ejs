<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <title>List</title>
    <style>
        th{
            margin-left: 30px;
            margin-right: 30px;
        }
    </style>
</head>
<body>
    <div class="container">
        <%if(products){%>
            <h5 class="text-success">Welcome: <%=products.name%></h5>
        <%}%>
        <h1>Products List</h1>
        <%if(message){%> 
           <div class="alert alert-success alert-dismissable">
            <button class="btn btn-close" data-bs-dismiss="alert">                  
            </button>
            <strong>success!</strong>
            <%= message%>
           </div> 
        <%}%>
        <a href="/product/create" class="btn btn-info">Create</a><br><br>
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
            <% products.forEach(item => {%>          
            <tr>
                <td><%=item.id%></td>
                <td><%=item.name%></td>
                <td><%=item.price%></td>   
                <td>
                  <img src=" <%=item.image%>" alt="image" width="100px" class="img-thumbnail"> 
                </td>
                <td>
                    <a href="/product/edit/<%=item._id%>" class="btn btn-primary">Update</a> <!-- Nút cập nhật -->
                    <a href="/product/delete/<%=item._id%>" class="btn btn-danger">Delete</a> <!-- Nút xóa -->
                </td>
            </tr>              
            <%})%>
        </table>
    </div>
</body>
</html>