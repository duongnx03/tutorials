<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <title>List</title>
    <style>
        th {
            margin-left: 30px;
            margin-right: 30px;
        }
        .price{
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Books List</h1>
        <div class="input-group mb-3">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="searchName" placeholder="Enter name to search" aria-label="Search by Name" aria-describedby="basic-addon1"><br><br>
                <button class="btn btn-outline-primary" id="searchByName">Search</button><br><br>
            </div>
        </div>
        <% if (message) { %>
            <div class="alert alert-success alert-dismissable">
                <button class="btn btn-close" data-bs-dismiss="alert"></button>
                <strong>Success!</strong>
                <%= message %>
            </div>
        <% } %>
        
        <a href="/book/create" class="btn btn-info">Create</a><br><br>
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th id="priceHeader" class="price">Price</th>
                <th>Quantity</th>
                <th>Action</th>
            </tr>
            <% books.forEach(item => { %>          
                <tr class="book-row" data-name="<%= item.name %>">
                    <td><%= item.id %></td>
                    <td><%= item.name %></td>
                    <td><%= item.price %></td>   
                    <td><%= item.quantity %></td>   
                    <td>
                        <a href="/book/edit/<%= item._id %>" class="btn btn-primary">Update</a>
                        <a href="/book/delete/<%= item._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>              
            <% }) %>
        </table>     
    </div>

    <script>
       $(document).ready(function () {
        $('#priceHeader').click(function () {
            let rows = $('.book-row').get();
            rows.sort(function (a, b) {
                var priceA = parseFloat($(a).find('td:eq(2)').text());
                var priceB = parseFloat($(b).find('td:eq(2)').text());
                return priceA - priceB;
            });
            $.each(rows, function (index, row) {
                $('.table > tbody').append(row);
            });
        });


        $('#searchByName').click(function () {
            var searchName = $('#searchName').val().toLowerCase();

            $('.book-row').each(function () {
                var name = $(this).find('td:eq(1)').text().toLowerCase();

                if (name.includes(searchName)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
    </script>
</body>
</html>
