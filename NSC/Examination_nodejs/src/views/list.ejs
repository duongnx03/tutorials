<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <title>Student_enrollment_ number</title>
    <style>
        th {
            margin-left: 30px;
            margin-right: 30px;
        }
        .price{
            cursor: pointer;
        }
    </style>
</head>
<body>
        <br><br><br>
    <div class="container">
        
        <% if (message) { %>
            <div class="alert alert-success alert-dismissable">
                <button class="btn btn-close" data-bs-dismiss="alert"></button>
                <strong>Success!</strong>
                <%= message %>
            </div>
        <% } %>
        
        <a href="/event/create" class="btn btn-info">Create New Event</a><br><br>
        <div class="input-group mb-3">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="searchName" placeholder="Enter event description" aria-label="Search by Name" aria-describedby="basic-addon1"><br><br>
                <button class="btn btn-outline-primary" id="searchByName">Search</button><br><br>
            </div>
        </div>
        <table class="table table-hover">
            <tr>
                <th>ID</th>
                <th>Description</th>
                <th>Date & Time</th>
                <th>Location</th>
                <th>Post code</th>
                <th>Action</th>
            </tr>
            <% tbEvent.forEach(item => { %>          
                <tr class="event-row" data-name="<%= item.description %>">
                    <td><%= item.id %></td>
                    <td><%= item.description %></td>
                    <td><%= item.datetime %></td>   
                    <td><%= item.location %></td>   
                    <td><%= item.postcode %></td>   
                    <td>
                        <a href="/event/delete/<%= item._id %>" class="btn btn-danger">Remove</a>
                    </td>
                </tr>              
            <% }) %>
        </table>     
    </div>

    <script>
       $(document).ready(function () {
        $('#searchByName').click(function () {
            var searchName = $('#searchName').val().toLowerCase();

            $('.event-row').each(function () {
                var name = $(this).find('td:eq(1)').text().toLowerCase();

                if (name.includes(searchName)) {
                    $(this).show();
                } else {
                    $(this).hide();
                }
            });
        });
    });
    </script>
</body>
</html>
