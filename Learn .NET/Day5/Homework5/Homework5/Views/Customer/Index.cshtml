@{
}

@model List<Homework5.Models.Customer>

<h2>Customer List</h2><br />
<a asp-action="Create">Create New</a>

<table class="table">
    <thead>
        <tr>         
            <th>Name</th>
            <th>Birthday</th>
            <th>Gender</th>
            <th>Email</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td data-id="@customer.Id" style="display: none;">@customer.Id</td>
                <td>@customer.Name</td>
                <td>@customer.Birthday</td>
                <td>@(customer.Gender ? "Male" : "Female")</td>
                <td>@customer.Email</td>
                <td>
                    <a asp-action="UpdateOrDelete" asp-route-id="@customer.Id">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
