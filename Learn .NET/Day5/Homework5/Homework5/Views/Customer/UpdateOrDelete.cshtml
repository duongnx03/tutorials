@model Homework5.Models.Customer;

<h2>Update or Delete Customer: @Model.Name</h2>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />

    <dl class="row">
        <dt class="col-sm-2">Id</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <!-- Add other fields as needed -->

        <dt class="col-sm-2">Birthday</dt>
        <dd class="col-sm-10">@Model.Birthday</dd>

        <dt class="col-sm-2">Gender</dt>
        <dd class="col-sm-10">@Model.Gender</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>

    <div class="form-group">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>

<script>// Xác nhận xóa trước khi gửi form
    document.querySelector("form").onsubmit = function () {
        return confirm("Are you sure you want to delete this customer?");
    };
</script>