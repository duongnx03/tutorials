

@{ ViewData["Title"] = "Index";}

<h1>Index</h1>

@if (ViewBag.error != null)
{
    <h4>@ViewBag.error</h4>
}

<form asp-action="Login" asp-controller="Account">
    <table>
        <tr>
            <td>Username: </td>
            <td><input name="username" /></td>
        </tr>
        <tr>
            <td>Password: </td>
            <td><input name="password" /></td>
        </tr>
        <tr>
            <td><input type="submit" value="Login" /></td>
        </tr>
    </table>
</form>